//**** 撫摸反應 ***********************************************************************************
//---- OnMouseMove事件 ------------------------------------------------------------------
//reference0：鼠標指針的X座標
//reference1：鼠標指針的Y座標
//reference2：鼠標指針的回轉方向（？）
//reference3 ：主人格端/使魔端（用0/1表示）
//reference4 ：觸摸判定區域的名字
OnMouseMove
{
	//---- 根據reference3判定是本体側還是kero側
	if reference3 == 0
	{
		//---- 本体側的撫摸
		MouseMoveSakura
	}
	else
	{
		//---- kero側的撫摸
		MouseMoveKero
	}
}

//---- 本体側の撫摸反應 -----------------------------------------------------------------
MouseMoveSakura
{
	if reference4 != ""
	{
		//---- 當撫摸人格特定位置時
		stroke++
		//---- 撫摸達到一定量時判定撫摸的部位
		if stroke >= 96
		{
			stroke = 0
			if reference4 == "ke" //胸口的殼字
			{
			"\0\s[0]這是撫摸胸口的字的反應對話。\w9\w9/
			\1\s[10]因為沒有寫，\w9所以就當已經說了吧。\e"
			"\0\s[0]這是撫摸胸口的字的反應對話。\w9\w9/
			\1\s[10]說到底這不應該是本體嗎。\w9本體被摸都沒有寫反應對話到底懶到了何種程度？\w9\w9/
			\0\s[0]\n\n不要問這種問題。\e"
			}
			elseif reference4 == "mao" //頭上的毛
			{
			"\0\s[0]這是撫摸呆毛的反應對話。\w9\w9/
			\1\s[10]因為沒有寫，\w9所以就當已經說了吧。\e"
			"\0\s[0]這是撫摸呆毛的反應對話。\w9\w9對話沒有寫。\w9\w9/
			\1\s[10]毫無意義的觸摸判定。\e"
			}
			else
			{
				// 撫摸未定義部位時無反應
				stroke = 0
			}
		}
	}
}
//---- kero側の撫摸反應 -----------------------------------------------------------------
MouseMoveKero
{
		//---- 當撫摸人格特定位置時
		stroke++
		//---- 撫摸達到一定量時判定撫摸的部位
		if stroke >= 96
		{
			stroke = 0
			"\1\s[10]你要找的Carol现在还不在这里。\e"
			"\1\s[10]我还不是你想找的Carol。\w9\w9\n但这并不意味着她不存在。\w9\w9/
			\0\s[0]所以你和“那个Carol”是什么关系？\e"
			"\1\s[10]你在想她对吧。\w9\w9\n好好做你该做的事\w9\w9\n她有这么跟你说过吧？\e"
		}
}


