//鍵盤反應————————————————
//reference0：按下的鍵。
//剩下的reference因為不常用所以這裡省略了。
OnKeyPress
{
	if reference0 == "f1" 
	{
		//---- 開啟readme.txt
		"\![open,readme]"
	}
	elseif reference0 == "m" {
		//M for Messages
		OnMyFunction
	}
	elseif reference0 == "s" {
		//S for Storys
		OnAiTalk
	}
	elseif reference0 == "r" {
		//R for Reloading Scripts
		OnDicChangeAndReload
	}
	elseif reference0 == "d" {
		//D for Directive Chatting
		OnNKCParse
	}
	elseif reference0 == "g" {
		//G for Generative Chatting
		OnAiTalk2
	}	
}

//---- SHELL更替開始 --------------------------------------------------------------------
OnShellChanging
{
	oldshell.name = shell.name
	shell.name = "%(reference0)"
	if oldshell.name == shell.name
	{
	"\0\s[0]開始重新載入外表的對話。\e"
	}
	else
	{
	"\0\s[0]開始更換外表事件。\w9\w9/
	\1\s[10]更換的外表名稱為%(shell.name)\e"
	}
}

//---- SHELL更替完了 --------------------------------------------------------------------
OnShellChanged
{
	if oldshell.name == shell.name
	{
	"\0\s[0]重新載入外表完畢的事件。\e"
	}
	else
	{
	"\0\s[0]開始更換外表事件。\w9\w9/
	\1\s[10]從外表%(oldshell.name)更換到外表%(shell.name)。\e"
	}
}

